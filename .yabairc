yabai -m rule --add app="^Maps$" manage=off border=off native-fullscreen=on space=^1
yabai -m rule --add app="^mpv$" label="mpv" manage=off
yabai -m rule --add app="^Music$" title="MiniPlayer" manage=off border=off
